# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Dummy root page, use it only if testing play-authenticate in stand-alone mode, otherwise point your own main action
GET     /                                 controllers.Authenticate.redirectToIndex

# --- Play Authenticate routes START

GET     /authenticate                     controllers.Authenticate.index

GET     /restricted                       controllers.Authenticate.restricted
GET     /assets/javascript/routes.js      controllers.Authenticate.jsRoutes

GET     /profile                          controllers.Authenticate.profile

GET     /login                            controllers.Authenticate.login
POST    /login                            controllers.Authenticate.doLogin

GET     /logout                           com.feth.play.module.pa.controllers.Authenticate.logout
GET     /authenticate/:provider           com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)

GET     /signup                           controllers.Authenticate.signup
POST    /signup                           controllers.Authenticate.doSignup

GET     /accounts/unverified              controllers.AuthenticateSignup.unverified
GET     /authenticate/:provider/denied    controllers.AuthenticateSignup.oAuthDenied(provider: String)

GET     /accounts/verify/:token           controllers.AuthenticateSignup.verify(token: String)
GET     /accounts/exists                  controllers.AuthenticateSignup.exists

GET     /accounts/password/reset/:token   controllers.AuthenticateSignup.resetPassword(token: String)
POST    /accounts/password/reset          controllers.AuthenticateSignup.doResetPassword

GET     /accounts/password/change         controllers.AuthenticateAccount.changePassword
POST    /accounts/password/change         controllers.AuthenticateAccount.doChangePassword

GET     /accounts/verify                  controllers.AuthenticateAccount.verifyEmail

GET     /accounts/add                     controllers.AuthenticateAccount.link

GET     /accounts/link                    controllers.AuthenticateAccount.askLink
POST    /accounts/link                    controllers.AuthenticateAccount.doLink

GET     /accounts/merge                   controllers.AuthenticateAccount.askMerge
POST    /accounts/merge                   controllers.AuthenticateAccount.doMerge

GET     /login/password/forgot            controllers.AuthenticateSignup.forgotPassword(email: String ?= "")
POST    /login/password/forgot            controllers.AuthenticateSignup.doForgotPassword

# --- Play Authenticate routes END

# --- Language class routes START

GET     /language/:code/*returnpath     controllers.Language.changeLanguage(code: String, returnpath:String)
GET     /language/:code/                controllers.Language.changeLanguageHome(code: String)

# --- Language class routes END

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
